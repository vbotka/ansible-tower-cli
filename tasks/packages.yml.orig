---

# FreeBSD
- name: Install tower-cli FreeBSD
  pip:
    name: "{{ item }}"
    executable: "{{ pip_executable|default(omit) }}"
  loop: "{{ tcli_packages }}"
  register: result
  retries: "{{ pip_install_retries }}"
  until: result is succeeded
  delay: "{{ pip_install_delay }}"
  when: ansible_os_family == "FreeBSD"

# Linux
- name: Install tower-cli Linux
  package:
    name: "{{ item }}"
  loop: "{{ tcli_packages }}"
  register: result
  retries: "{{ linux_install_retries }}"
  until: result is succeeded
  delay: "{{ linux_install_delay }}"
  when: (ansible_os_family == "RedHat") or
        (ansible_os_family == "Debian")

